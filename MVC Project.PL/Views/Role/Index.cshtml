@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "All Roles";
}

<h1>All Roles</h1>
<br />
<br />
<a asp-action="Create" class="btn btn-primary">Create New Role </a>
<div class="row justify-content-center align-items-center mt-4">
    <form asp-action="Index" class="row col-8 offset-1">
        <div class="col-8">
            <input type="text" class="form-control" name="name" placeholder="Search By Name" />
        </div>
        <div class="col-4">
            <input type="submit" value="Search" class="btn btn-success" />
        </div>
    </form>

</div>


@if (Model.Count() > 0)
{
    <table class=" mt-4  table table-striped table-hover ">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(U=>U.Id)</td>
                <td>@Html.DisplayNameFor(U=>U.RoleName)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(U=> role.Id)</td>
                    <td>@Html.DisplayFor(U=> role.RoleName)</td>



                    <partial name="_ButtonsPartialView" model="@role.Id" />
                </tr>

            }
        </tbody>
    </table>

}
else
{
    <div class="mt-5 alert alert-warning">
        <h2> There is No Roles</h2>
    </div>

}

